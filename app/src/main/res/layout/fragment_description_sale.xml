<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.descriptionaction.DescriptionActionFragment">

        <include
            layout="@layout/fragment_app_bar"
            android:id="@+id/app_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <ImageView
            android:id="@+id/img_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/saleimg"
            android:layout_below="@+id/app_bar" />

        <TextView
            android:id="@+id/title_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_sale"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Описание"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_sale"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Скидка на наращивание волос с 25 января по 30 января"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/sum_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_sale"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="30%"
            android:textColor="@color/colorSale"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="64dp"
            android:text="Оформить заказ"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_bg"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_local_phone_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="68dp"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>
